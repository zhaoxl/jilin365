<%= content_for :javascript do%>
<script>
$(function(){
	//get streets
	$("#area_city").change(function(){
		if($(this).val() == "")
		{
			$("#area_district").val("").hide();
			return false;
		} 
		
		$.ajax({
			url: '/ajax/area/children',
			type: 'GET',
			dataType: 'json',
			data: {code: $(this).val()},
			success: function(response)
			{
				if(response.length == 0)
				{
					$("#area_district").html('<option value="" selected></option>').hide();
					return true;
				}
				var options = '';
				$.each(response, function(index, city){
					options += '<option value="'+ city['code'] +'">'+ city['name'] +'</option>';
				});
				$("#area_district").html(options).show();
			}
		});
	});
  
  
  
});
</script>
<%end%>