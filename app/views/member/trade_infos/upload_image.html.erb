<%@hide_footer = true%>

<%= stylesheet_link_tag 'base', media: 'all', 'data-turbolinks-track' => true %>
<style type="text/css" media="screen">
body{background: white;}
.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;}
}

.a-upload {
    padding: 4px 10px;
    height: 20px;
    line-height: 20px;
    position: relative;
    cursor: pointer;
    background: #fafafa;
    border: 1px solid #ddd;
    border-radius: 4px;
    overflow: hidden;
    display: inline-block;
    *display: inline;
    *zoom: 1
}

.a-upload  input {
    font-size: 100px;
    opacity: 0;
    filter: alpha(opacity=0);
}
.a-upload span{color: #999999;}

.img_list{float: left;}
.img_list ul li{list-style: none; width: 3rem; float: left;}
.img_list ul li a{color: #999999;}
.img_list ul li img{width: 2rem; height: 2rem;}

.form{float: left; width: 5rem; padding-top: 0.5rem;}
</style>

<div class="img_list">
  <ul>
    <%@images.each do |image|%>
    <li>
      <img src="<%= image.image.url%>" />
      <%= link_to "删除", upload_image_destroy_member_trade_infos_path(image: image.id), method: :delete%>
    </li>
    <%end%>
  </ul>
</div>

<%if @images.size < 5%>
<div class="form">
  <%= form_tag upload_image_save_member_trade_infos_path, id: "form", :multipart=>true do%>
  <a href="javascript:;" class="a-upload " id="skin">
    <span class="iconfont">&#xe615;</span>
    <input type="file" name="file" id="file" accept="image/*">
  </a>
  <%end%>
</div>
<%end%>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<script type="text/javascript">
$(function(){
  $("#file").change(function(){
    $("#skin span").html("正在上传...");
    $("#form").submit();
  });
});
</script>