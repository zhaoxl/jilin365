<div class="trade_info_filter">
	<div class="context">
		<div class="header">
			<div class="title">
				区县
			</div>
	    <div class="body clearfix">
				<%@areas.each do |area|%>
	      <a href="<%= trade_infos_path(rc: params[:rc], c: params[:c], a: area.code)%>" class="<%= area.code.to_i == params[:a].to_i ? "current" : ""%>"><%= area.name%></a>
				<%end%>
	    </div>
		</div>
  </div>
</div>


