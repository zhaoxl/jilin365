<div class="blank05"></div>

<div class="info_list">
	<div class="context">
		<div class="header">
			<div class="title">
				<%= @root_category.try(:name) || "信息列表"%>
			</div>
		</div>
		<div class="body">
			<ul class="info">
				<% @trade_infos.each do |info|%>
				<li class="clearfix">
					<a href="<%= trade_info_path(info)%>" class="img">
						<img src="<%= info.front_image.try(:url)%>" />
					</a>
					<div class="content">
						<p class="title"><%= truncate_u(info.title, 12, '')%></p>
						<p class="desc color-gray"><%= info.desc%></p>
						<div class="attrs color-red">
              <%info.trade_info_attrs.where(list_display: true).each do |attr|%>
							<span><%= attr.value%></span>
              <%end%>
						</div>
					</div>
				</li>
				<%end%>
			</ul>
		</div>
	</div>
</div>

