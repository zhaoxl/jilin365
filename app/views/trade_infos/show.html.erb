<div class="info_list">
	<div class="context">
		<div class="header">
			<div class="title">
				相关信息
			</div>
		</div>
		<div class="body">
			<ul class="info">
				<% @similarity_trade_infos.each do |info|%>
				<li class="clearfix">
					<a href="#" class="img">
						<img src="<%= info.front_image.try(:image).try(:url)%>" />
					</a>
					<div class="content">
						<p class="title"><%= info.title%></p>
						<p class="desc color-gray"><%= info.desc%></p>
						<div class="attrs color-red">
              <%info.trade_info_attrs.each do |attr|%>
							<span><%= attr.value%></span>
              <%end%>
						</div>
					</div>
				</li>
				<%end%>
			</ul>
		</div>
	</div>
</div>

