<div class="info_list">
	<div class="context">
		<div class="header">
			<div class="title">
				相关信息
			</div>
		</div>
		<div class="body">
			<ul class="info">
				<% @similarity_trade_infos.each do |info|%>
				<li class="clearfix">
					<a href="<%= trade_info_path(info)%>">
  					<div class="img">
  						<img src="<%= info.front_image.try(:url)%>" />
  					</div>
  					<div class="content">
  						<p class="title"><%= truncate_u(info.title, 12, '')%></p>
  						<p class="desc color-gray"><%= info.desc%></p>
  						<div class="attrs color-red">
                <%info.trade_info_attrs.where(list_display: true).each do |attr|%>
  							<span><%= attr.value%></span>
                <%end%>
  						</div>
  					</div>
          </a>
				</li>
				<%end%>
			</ul>
		</div>
	</div>
</div>

