<ul class="nav nav-pills">
  <li role="presentation"><a href="<%= edit_admin_trade_info_category_path(@trade_info_category)%>">基本信息</a></li>
  <li role="presentation" class="active"><a href="#">属性</a></li>
</ul>
<br>

<div class="row">
	<div class="col-xs-12">			
		<div class="box box-primary">
			<div class="box-body pad table-responsive">
				<div>
					<table class="table table-hover orders_table">
						<tbody>
							<tr>
								<th><label><input type="checkbox" />全选</label></th>
								<th>名称</th>
								<th>数据类型</th>
								<th>显示顺序</th>
								<th>操作</th>
							</tr>
							<%@datas.each do |data|%>
							<tr>
								<td>
									<div class="row show-grid">
										<div class="col-md-3 img_box">
											<div class="check_box">
												<input type="checkbox" name="data[]id" value="<%= data.id%>">
											</div>
										</div>
									</div>
								</td>
								<td>
									<%= data.name%>
								</td>
								<td>
									<%= data.data_type%>
								</td>
								<td><%= data.position%></td>
								<td>
									<a href="<%= edit_admin_trade_info_category_trade_info_category_attr_path(@trade_info_category, data)%>">编辑</a>
									<a href="<%= move_up_admin_trade_info_category_trade_info_category_attr_path(@trade_info_category, data)%>">上移</a>
									<a href="<%= move_down_admin_trade_info_category_trade_info_category_attr_path(@trade_info_category, data)%>">下移</a>
									<%= link_to '删除', admin_trade_info_category_trade_info_category_attr_path(@trade_info_category, data), :confirm => '确定要删除属性吗?', :method => :delete %></td>
								</td>
							</tr>
							<%end%>
						</tbody>
					</table>
				</div>
				<a href="<%= new_admin_trade_info_category_trade_info_category_attr_path%>" class="btn btn-default">添加属性</a>
			</div> 
		</div>
	</div>
</div>






















