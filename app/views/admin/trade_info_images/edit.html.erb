<ul class="nav nav-pills">
  <li role="presentation"><a href="<%= edit_admin_trade_info_path(@trade_info)%>">基本信息</a></li>
  <li role="presentation" class="active"><a href="#">图片</a></li>
</ul>
<br>

<div class="row">
	<div class="col-xs-12">			
		<div class="box box-primary">
			<%= form_for @data, url: admin_trade_info_trade_info_image_path(@trade_info, @data), :html=>{:multipart=>true} do |f| %>
				<div class="box-body">
					<div class="form-group">
						<label for="exampleInputEmail1">图片</label>
						<img src="<%= @data.logo.url%>" />
						<%= f.file_field :image%>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">显示顺序</label>
						<%= f.text_field :position, class: 'form-control'%>
					</div>
				</div>
				<div class="box-footer">
					<button class="btn btn-primary" type="submit">保存</button>
				</div>
			<% end %>
		</div>
	</div>
</div>






















