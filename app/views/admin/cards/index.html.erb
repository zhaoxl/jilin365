<%@page_title ||= "#{t("activerecord.attributes.card.category/#{params[:category]}")}管理"%>

<style type="text/css" media="screen">
.table > tbody > tr > td{vertical-align: middle;}
.check_box{float: left; }
.img_box{text-align: center; line-height: 83px}
.inline_label{float: left; margin: 7px auto auto -18px;}
.input_label{}
.img-thumbnail{width: 50%;}	
.filter .col-sm-05{
	width: 4.166665%; 
	float: left;
	min-height: 1px;
  padding-left: 15px;
  padding-right: 0px;
	padding-top: 7px;
  position: relative;
}
.filter .col-sm-07{
	width: 5.833330%;
	float: left;
	min-height: 1px;
  padding-left: 15px;
  padding-right: 0px;
	padding-top: 7px;
  position: relative;
}
.filter div[class^='col-xs-']{padding-left: 0px;}
</style>

	<div class="row">
		<div class="col-xs-12">			
			<div class="box box-primary">
				<div class="box-body pad table-responsive">
					<div>
						<table class="table table-hover areas_table">
							<tbody>
								<tr>
									<th><label><input type="checkbox" />全选</label></th>
									<th>名称</th>
									<th>图片</th>
									<th>状态</th>
									<th>联系电话</th>
									<th>剩余数量</th>
									<th>已领取数量</th>
									<th>操作</th>
								</tr>
								<%@datas.each do |data|%>
  								<tr>
  									<td>
  										<div class="row show-grid">
  											<div class="col-md-3 img_box">
  												<div class="check_box">
  													<input type="checkbox" name="category[]id" value="<%= data.id%>">
  												</div>
  											</div>
  										</div>
  									</td>
  									<td><%= data.name%></td>
                    <td><img src="<%= data.logo.url%>" width="50" height="50"></td>
  									<td><%= data.state%></td>
  									<td><%= data.phone%></td>
  									<td><%= data.count.to_i%></td>
  									<td><%= data.user_cards.count%></td>
  									<td>
  										<a href="<%= edit_admin_card_path(data)%>">编辑</a>
  										<%if data.can_delete?%>
  											<%= link_to '删除', admin_card_path(data), :confirm => '确定要删除吗?', :method => :delete %></td>
  										<%end%>
  									</td>
  								</tr>
                  <%end%>
							</tbody>
						</table>
					</div>
				</div> 
			</div>
		</div>
	</div>

<script type="text/javascript">
$(function(){
	$("#filter_form input").change(function(){
		$("#filter_form").submit();
	});
	$("#filter_form input").keydown(function(e){
		if(e.keyCode == 13){
			$("#filter_form").submit();
		}
	}); 
});
</script>
















