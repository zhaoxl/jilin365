<%@page_title ||= "地区管理"%>

<div class="row">
	<div class="col-md-12">
		<div class="box box-primary">
			<%= form_for [:admin, @data], url:  admin_area_path(@data), method: :patch, :html=>{:multipart=>true} do |f| %>
				<div class="box-body">
					<div class="form-group">
						<label for="exampleInputPassword1">名称</label>
						<%= f.text_field :name, class: 'form-control'%>
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">级别</label>
						<%= f.text_field :level, class: 'form-control'%>
					</div>
					
				</div>
				<div class="box-footer">
					<button class="btn btn-primary" type="submit">保存</button>
				</div>
			<% end %>

			
		</div> 
	</div> 
</div>

